<?xml version="1.0" encoding="utf-8"?>

<!--Step 1: Create menu inside res folder then
        Create main_menu.xml inside menu folder then
        Create menu items inside main_menu.xml-->

<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    checkableBehavior="single" means only single item
            can be clicked at one time-->
    <group android:checkableBehavior="single">
        <item
            android:id="@+id/nav_home"
            android:icon="@drawable/ic_home"
            android:title="Home" />
        <item
            android:id="@+id/nav_cycle"
            android:icon="@drawable/ic_cycling"
            android:title="Cycling" />
        <item
            android:id="@+id/nav_bus"
            android:icon="@drawable/ic_bus"
            android:title="Bus" />
        <item
            android:id="@+id/nav_plane"
            android:icon="@drawable/ic_plane"
            android:title="Plane" />
    </group>

    <group android:checkableBehavior="single">
        <item android:title="Profile">
            <menu>
                <item
                    android:id="@+id/nav_login"
                    android:icon="@drawable/ic_login"
                    android:title="Login" />
                <item
                    android:id="@+id/nav_profile"
                    android:icon="@drawable/ic_profile"
                    android:title="Profile" />
                <item
                    android:id="@+id/nav_logout"
                    android:icon="@drawable/ic_logout"
                    android:title="Logout" />
            </menu>
        </item>
    </group>

    <item android:title="Communicate">
        <menu>
            <item
                android:id="@+id/nav_share"
                android:icon="@drawable/ic_share"
                android:title="Share" />
            <item
                android:id="@+id/nav_rate_us"
                android:icon="@drawable/ic_rate_us"
                android:title="Rate us" />
        </menu>
